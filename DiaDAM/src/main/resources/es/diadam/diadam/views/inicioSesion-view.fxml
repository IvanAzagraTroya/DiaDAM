<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!-- @author Iván Azagra -->

<GridPane alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="230.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="es.diadam.diadam.controllers.IniciarSesionController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Pane prefHeight="294.0" prefWidth="475.0">
        <Label layoutX="45.0" layoutY="33.0" text="Email:"/>
        <TextField fx:id="txtEmail" layoutX="45.0" layoutY="51.0" prefHeight="26.0" prefWidth="310.0"
                   promptText="Introduzca su email">
            <font>
                <Font name="System Italic" size="12.0"/>
            </font>
        </TextField>
        <Label layoutX="45.0" layoutY="88.0" text="Contraseña:"/>
        <TextField fx:id="txtContrasenia" layoutX="45.0" layoutY="106.0" prefHeight="26.0" prefWidth="310.0"
                   promptText="Contraseña">
        <font>
            <Font name="System Italic" size="12.0"/>
        </font>
        </TextField>
        <Button fx:id="btnLimpiar" cancelButton="true" layoutX="39.0" layoutY="155.0" mnemonicParsing="false"
                onAction="#btnLimpiarClick" text="Limpiar campos">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
            <graphic>
                <ImageView fitHeight="15.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../../../images/delete-alert.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnIniciarSesion" defaultButton="true" layoutX="176.0" layoutY="154.0" mnemonicParsing="false"
                onAction="#btnIniciarSesion" prefHeight="26.0" prefWidth="92.0" text="Iniciar Sesión"/>
        <Button fx:id="btnSalirClick" layoutX="291.0" layoutY="154.0" mnemonicParsing="false" onAction="#btnSalirClick"
                prefHeight="26.0" prefWidth="64.0" text="Salir"/>
        <Hyperlink layoutX="14.0" layoutY="193.0" onAction="#linkGoogle" text="Iniciar sesión con Google">
        <graphic>
            <ImageView fitHeight="14.0" fitWidth="17.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../../../../images/google.png"/>
            </ImageView>
        </graphic>
        </Hyperlink>
        <ImageView fitHeight="47.0" fitWidth="200.0" layoutX="158.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../../../../images/Dia.png"/>
        </ImageView>
        <Button layoutX="268.0" layoutY="192.0" mnemonicParsing="false" text="No tienes cuenta?"/>
    </Pane>
</GridPane>
